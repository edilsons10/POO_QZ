#include <stdio.h>

#define MAX 100

int main() {
    int pilha[MAX];
    int topo = -1;
    int numero;
    int soma = 0;

    printf("Digite numeros inteiros (0 para parar):\n");

    
    while (1) {
        scanf("%d", &numero);

        if (numero == 0) {
            break; 
        }

        if (topo < MAX - 1) {
            topo++;
            pilha[topo] = numero;
        } else {
            printf("Pilha cheia!\n");
            break;
        }
    }

    
    while (topo >= 0) {
        soma += pilha[topo];
        topo--;
    }

    printf("Soma dos numeros na pilha: %d\n", soma);

    return 0;
}